#!/bin/dash

clear

CHOICE=$(
whiptail --title "Lenic 0.3-1" --menu "Select one of following options:" 17 50 10 \
	"1)" "About"   \
	"2)" "Help"  \
	"" "" \
	"3)" "Install tool" \
	"4)" "Update tool" \
	"5)" "Debtemplate tool" \
	"6)" "Upgrade tool" \
	"" "" \
	"7)" "Quit 'Lenic'"  3>&2 2>&1 1>&3	
)


if [ "$CHOICE" = "2)" ]; then
  dash /usr/lib/lenic/help.sh
elif [ "$CHOICE" = "3)" ]; then
  dash /usr/lib/lenic/install.sh "$ANS2" "ANS3"
elif [ "$CHOICE" = "4)" ]; then
  dash /usr/lib/lenic/update.sh
elif [ "$CHOICE" = "6)" ]; then
  dash /usr/lib/lenic/upgrade.sh "$ANS2" "ANS3"
elif [ "$CHOICE" = "5)" ]; then
  dash /usr/lib/lenic/debtemplate.sh "$ANS2" "ANS3"
elif [ "$CHOICE" = "1)" ]; then
  dash /usr/lib/lenic/about.sh
fi
